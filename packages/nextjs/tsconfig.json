{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@cipher-auth/server": ["../../server/dist"], // Point to the built dist folder
      "@cipher-auth/server/*": ["../../server/dist/*"]
    }
  },
  "include": ["src/**/*"]
  // "exclude": ["../../packages/**/dist"]
}
